<div class="picture">
  <div class="fields">
    <div class="field">
      <%= f.label :title, "Title" %><br />
      <%= f.text_field :title, :class => "text_field_height text_field_width required" %><br />
    </div>
    <div class="field">
      <%= f.label :description, "Description" %><br />
      <%= f.text_area :description, :rows => 3 %>
    </div>
    <div class="field">
      <%= f.label :private, "private?" %><br />
      <%= f.check_box :private %>
    </div>  
    <div class="field">
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </div>
    <%= link_to_remove_fields "remove_picture", ".picture", f %><br />
  </div>
</div>
