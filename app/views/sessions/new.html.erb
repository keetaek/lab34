<div class="login_form">
  <h1>Log in</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], :placeholder => "email" %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
    	Remember me
    	<%= check_box_tag :remember_me, 1, params[:remember_me] %>
   	</div>
    <p><%= link_to "Forgot password?", new_password_reset_path %></p>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>
</div>
